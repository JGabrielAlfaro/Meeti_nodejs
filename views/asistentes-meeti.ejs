<main class="contenedor asistentes">
    <h1><%= nombrePagina %></h1>
    <% if(asistentes.length > 0) { %>

        <ul class="listado-asistente">
            <% asistentes.forEach(asistente => { %>
                <li>
                    <div class="imagen">
                        <% if(asistente.imagen) { %>
                            <img src="/uploads/perfiles/<%= asistente.imagen %>" alt="Imagen de <%= asistente.nombre %>">
                        <% } else { %>
                            <span class="placeholder-imagen"></span>
                        <% } %>
                    </div>
                    <div class="nombre-asistente">
                        <%= asistente.nombre %>
                    </div>
                </li>
            <% }); %>
        </ul>

    <% } else { %>
        <p class="no-asistentes">No hay asistentes aÃºn</p>
    <% } %>
</main>
