<div class="contenedor">
    <h1><%= nombrePagina %></h1>
    <div class="informacion-grupo">
        <div class="imagen">
            <% if (grupo.imagen) { %>
                <img src="/uploads/grupos/<%= grupo.imagen %>" alt="Imagen del grupo <%= grupo.nombre %>">
            <% } else { %>
                <img src="/img/meeti.jpg" alt="Imagen predeterminada del grupo">
            <% } %>
        </div>

        <div class="texto">
            <p><%- grupo.descripcion %></p>
            <% if (grupo.url) { %>
                <a class="url" href="<%= grupo.url %>">Visita nuestro sitio web</a>
            <% } %>
        </div>

        <% if (meetis.length > 0) { %>
            <h2>Pr√≥ximos meetis</h2>
            <ul class="lista-meetis">
                <% meetis.forEach(meeti => { %>
                    <li>
                        <div class="texto">
                            <a href="/meetis/<%= meeti.slug %>">
                                <h3><%= meeti.titulo %></h3>
                                <% const fecha = `${meeti.fecha} ${meeti.hora}`; %>
                                <p class="fecha"><%= moment(fecha).format('LLLL') %> Horas</p>
                            </a>
                        </div>
                    </li>
                <% }); %>
            </ul>
        <% } %>
    </div>
</div>
